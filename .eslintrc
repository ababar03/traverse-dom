{
	"parser": "babel-eslint",
	"extends": [
		"airbnb",
		"plugin:flowtype/recommended"
	],
	"plugins": [
		"flowtype"
	],
	"env": {
		"mocha": true
	},
	"settings": {
		"flowtype": {
			"onlyFilesWithFlowAnnotation": true
		}
	},
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"no-tabs": 0,
		"import/no-extraneous-dependencies": [
			"error",
			{
				"devDependencies": true
			}
		]
	}
}
